# Highway Cafe POS System - Environment Configuration
# Copy this file to .env and update with your actual values

# ===================================
# REQUIRED SETTINGS
# ===================================

# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration (PostgreSQL)
# For Replit/Neon Database:
DATABASE_URL=postgresql://[username]:[password]@[host]/[database]?sslmode=require

# For Local PostgreSQL:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/highway_cafe_pos
PGHOST=localhost
PGPORT=5432
PGDATABASE=highway_cafe_pos
PGUSER=postgres
PGPASSWORD=your_password_here

# Session Security (IMPORTANT: Change in production!)
SESSION_SECRET=your_super_secret_session_key_change_this_in_production

# Local Network Settings (for Android tablets)
# Replace with your actual server IP address
LOCAL_IP=192.168.1.100

# ===================================
# AUTHENTICATION & SECURITY
# ===================================

# Replit Auth Configuration (if using Replit Auth)
REPLIT_APP_NAME=highway-cafe-pos
REPLIT_AUTH_DOMAIN=replit.com

# Default Admin Credentials (Change after first login!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# Session Configuration
SESSION_MAX_AGE=86400000
SESSION_ROLLING=true

# ===================================
# GAMIFICATION SETTINGS
# ===================================

# Leaderboard Configuration
LEADERBOARD_ENABLED=true
ACHIEVEMENT_POINTS_MULTIPLIER=1.0
MONTHLY_RESET_DAY=1

# Achievement Thresholds
FIRST_ORDER_POINTS=50
SPEED_DEMON_TIME_LIMIT=120
SALES_CHAMPION_THRESHOLD=1000
UPSELL_SUCCESS_RATE_THRESHOLD=25
ACCURACY_RATE_THRESHOLD=95

# ===================================
# HARDWARE INTEGRATION (OPTIONAL)
# ===================================

# Printer Configuration
RECEIPT_PRINTER_ENABLED=false
RECEIPT_PRINTER_IP=192.168.1.101
BARCODE_PRINTER_ENABLED=false
BARCODE_PRINTER_IP=192.168.1.102

# Audio Notifications
AUDIO_NOTIFICATIONS_ENABLED=true
NOTIFICATION_VOLUME=0.8

# Android Tablet Settings
VIBRATION_ENABLED=true
PREVENT_ZOOM=true
FULLSCREEN_MODE=false

# ===================================
# BACKUP & MAINTENANCE
# ===================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Performance Monitoring
PERFORMANCE_LOGGING=true
SLOW_QUERY_THRESHOLD=1000

# ===================================
# DEVELOPMENT & DEBUG
# ===================================

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true

# Development Tools
HOT_RELOAD=true
SOURCE_MAPS=true

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ===================================
# CAFE SPECIFIC SETTINGS
# ===================================

# Business Information
CAFE_NAME=Highway Cafe
CAFE_ADDRESS=123 Highway Road, City, State 12345
CAFE_PHONE=+1-555-123-4567
CAFE_TAX_RATE=0.08

# Operating Hours
OPENING_TIME=06:00
CLOSING_TIME=22:00
TIMEZONE=America/New_York

# Order Configuration
AUTO_ASSIGN_ORDERS=true
ORDER_TIMEOUT_MINUTES=30
MAX_CONCURRENT_ORDERS=50

# Delivery Settings
DELIVERY_ENABLED=true
DELIVERY_RADIUS_KM=15
DELIVERY_FEE=3.99

# ===================================
# TUTORIAL SYSTEM
# ===================================

# Tutorial Configuration
TUTORIAL_ENABLED=true
TUTORIAL_AUTO_START=true
TUTORIAL_COMPLETION_TRACKING=true
TUTORIAL_BADGE_SYSTEM=true

# Tutorial Modules
TUTORIAL_POS_BASICS_ENABLED=true
TUTORIAL_FIRST_ORDER_ENABLED=true
TUTORIAL_MULTIPLE_ORDERS_ENABLED=true
TUTORIAL_INVENTORY_ENABLED=true